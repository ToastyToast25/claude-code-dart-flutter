{
  "mcpServers": {
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub integration for PRs, issues, and repository management"
    },
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-filesystem", "--root", "."],
      "description": "Enhanced filesystem operations"
    }
  },
  "disabledMcpServers": [
    "postgres",
    "redis",
    "firebase",
    "supabase",
    "cloudflare",
    "sentry",
    "slack"
  ],
  "availableServers": {
    "postgres": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-postgres"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}"
      },
      "description": "PostgreSQL database access - enable when needed"
    },
    "redis": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-redis"],
      "env": {
        "REDIS_URL": "${REDIS_URL:-redis://localhost:6379}"
      },
      "description": "Redis cache access - enable when needed"
    },
    "firebase": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-firebase"],
      "env": {
        "FIREBASE_PROJECT_ID": "${FIREBASE_PROJECT_ID}",
        "GOOGLE_APPLICATION_CREDENTIALS": "${GOOGLE_APPLICATION_CREDENTIALS}"
      },
      "description": "Firebase services - enable when needed"
    },
    "supabase": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-supabase"],
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_KEY": "${SUPABASE_KEY}"
      },
      "description": "Supabase backend - enable when needed"
    },
    "cloudflare": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-cloudflare"],
      "env": {
        "CF_API_TOKEN": "${CF_API_TOKEN}",
        "CF_ACCOUNT_ID": "${CF_ACCOUNT_ID}"
      },
      "description": "Cloudflare DNS and CDN management - enable when needed"
    },
    "sentry": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-sentry"],
      "env": {
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}",
        "SENTRY_ORG": "${SENTRY_ORG}"
      },
      "description": "Sentry error tracking - enable when needed"
    },
    "slack": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}"
      },
      "description": "Slack messaging - enable when needed"
    }
  },
  "_comment": "Move servers from 'availableServers' to 'mcpServers' to enable. Keep under 10 active to preserve context window."
}
