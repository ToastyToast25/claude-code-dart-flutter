class _LoadedView extends StatelessWidget {
  const _LoadedView({required this.items});

  final List<{{Entity}}> items;

  @override
  Widget build(BuildContext context) {
    if (items.isEmpty) {
      return const _EmptyView();
    }

    return RefreshIndicator(
      onRefresh: () async {
        context.read<{{PageName}}Bloc>().add(const {{PageName}}Refreshed());
      },
      child: ListView.builder(
        padding: const EdgeInsets.all(16),
        itemCount: items.length,
        itemBuilder: (context, index) {
          final item = items[index];
          return {{PageName}}ListItem(
            item: item,
            onTap: () => _navigateToDetail(context, item),
            onDelete: () => _confirmDelete(context, item),
          );
        },
      ),
    );
  }

  void _navigateToDetail(BuildContext context, {{Entity}} item) {
    // Navigator.of(context).push({{Entity}}DetailPage.route(item.id));
  }

  void _confirmDelete(BuildContext context, {{Entity}} item) {
    showDialog(
      context: context,
      builder: (_) => AlertDialog(
        title: const Text('Delete'),
        content: const Text('Are you sure you want to delete this item?'),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: const Text('Cancel'),
          ),
          TextButton(
            onPressed: () {
              Navigator.pop(context);
              context.read<{{PageName}}Bloc>().add({{PageName}}ItemDeleted(item.id));
            },
            child: const Text('Delete'),
          ),
        ],
      ),
    );
  }
}

