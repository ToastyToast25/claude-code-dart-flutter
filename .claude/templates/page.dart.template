/// This page is responsible for:
/// - Providing the BLoC/Cubit
/// - Handling navigation
/// - Setting up the scaffold
class {{PageName}}Page extends StatelessWidget {
  const {{PageName}}Page({super.key});

  /// Route name for navigation.
  static const routeName = '/{{page_name}}';

  /// Route builder for GoRouter/Navigator.
  static Route<void> route() {
    return MaterialPageRoute(
      builder: (_) => const {{PageName}}Page(),
      settings: const RouteSettings(name: routeName),
    );
  }

  @override
  Widget build(BuildContext context) {
    return BlocProvider(
      create: (context) => {{PageName}}Bloc(
        context.read<{{Entity}}Repository>(),
      )..add(const {{PageName}}Started()),
      child: const {{PageName}}View(),
    );
  }
}

