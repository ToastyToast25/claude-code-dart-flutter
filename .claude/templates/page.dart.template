// ==============================================================
// BODY - Content with State Handling
// ==============================================================

/// {{PageName}} body that handles different states.
class {{PageName}}Body extends StatelessWidget {
  const {{PageName}}Body({super.key});

  @override
  Widget build(BuildContext context) {
    return BlocConsumer<{{PageName}}Bloc, {{PageName}}State>(
      listener: (context, state) {
        // Handle side effects
        if (state is {{PageName}}Error) {
          ScaffoldMessenger.of(context).showSnackBar(
            SnackBar(
              content: Text(state.message),
              backgroundColor: Theme.of(context).colorScheme.error,
            ),
          );
        }
        if (state is {{PageName}}OperationSuccess) {
          ScaffoldMessenger.of(context).showSnackBar(
            SnackBar(content: Text(state.message)),
          );
        }
      },
      builder: (context, state) {
        return switch (state) {
          {{PageName}}Initial() => const _InitialView(),
          {{PageName}}Loading() => const _LoadingView(),
          {{PageName}}Loaded(:final items) => _LoadedView(items: items),
          {{PageName}}Error(:final message) => _ErrorView(message: message),
          {{PageName}}OperationSuccess() => const _LoadingView(), // Brief loading
          _ => const SizedBox.shrink(),
        };
      },
    );
  }
}

